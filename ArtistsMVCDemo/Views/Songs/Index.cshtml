@model IEnumerable<ArtistsMVCDemo.Models.Song>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Artist
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Album.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Youtube)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Album.Artist.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Album.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>

            <a href="#" data-toggle="modal" data-target="#@Html.DisplayFor(modelItem => item.ID)">

                <img width="40" src="~/img/youtube.png" />
            </a>

            <!-- Modal -->
            <div class="modal fade" id="@Html.DisplayFor(modelItem => item.ID)"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="modal-title">
                                        @item.Title
                                    </h3>
                                </div>
                                <div class="col-md-5">
                                    <h4 class="modal-title">
                                        @item.Album.Title
                                    </h4>
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="modal-body">
                            <p class="text-center">
                                <iframe width="500" height="500" src="@Html.DisplayFor(modelItem=> item.Youtube)" 
                                        frameborder="0" allowfullscreen>

                                </iframe>
                            </p>
                        </div>
                        <div class="modal-footer">
                            &copy; Copyright by @item.Album.Artist.FullName All rights blah blah 
                        </div>
                    </div>
                </div>
            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
